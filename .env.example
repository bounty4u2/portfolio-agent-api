# Copy this file to .env and fill in your actual values

# Anthropic API key for AI insights
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Email configuration for sending reports
YOUR_EMAIL=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password

# Optional: Stripe configuration for payments (future)
# STRIPE_SECRET_KEY=your-stripe-secret-key
# STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Optional: Database URL (for production)
# DATABASE_URL=postgresql://user:password@host:port/dbname

# Optional: Redis URL for background jobs (for production)
# REDIS_URL=redis://localhost:6379

# Application settings
PORT=5000
ENVIRONMENT=development

# Security (generate a random secret key for production)
# SECRET_KEY=your-secret-key-here

# Optional: Monitoring (for production)
# SENTRY_DSN=your-sentry-dsn
# LOGDNA_KEY=your-logdna-key